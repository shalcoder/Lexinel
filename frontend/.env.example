# Backend API URL
# Production example: https://api.policyguard.ai
NEXT_PUBLIC_API_URL=http://localhost:8000

# Firebase Configuration (For Auth & Firestore)
# Enable Firebase Authentication by setting this to 'true'
NEXT_PUBLIC_USE_FIREBASE=true

# Get these from your Firebase Console -> Project Settings -> Web App
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Feature Flags
# Set to 'false' to disable the Judge Mode sandbox flow
NEXT_PUBLIC_ENABLE_DEMO_MODE=true
